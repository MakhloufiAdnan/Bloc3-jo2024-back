# Connexion à la base PostgreSQL Docker (réseau Docker Compose)
spring.datasource.url=jdbc:postgresql://db:5432/${POSTGRES_DB}
spring.datasource.username=${POSTGRES_USER}
spring.datasource.password=${POSTGRES_PASSWORD}

# JWT (pour les tests en dev)
jwt.secret=${JWT_SECRET:dev-secret}
jwt.expiration=${JWT_EXPIRATION:86400000} # 1 jour par défaut

# Port du serveur (8080 par défaut)
server.port=8080

# SMTP pour envoi d'email (en dev on peut ignorer ou utiliser un faux SMTP comme MailHog)
spring.mail.host=${SMTP_HOST:localhost}
spring.mail.port=${SMTP_PORT:1025}
spring.mail.username=${EMAIL_USERNAME:}
spring.mail.password=${EMAIL_PASSWORD:}
spring.mail.properties.mail.smtp.auth=true
spring.mail.properties.mail.smtp.starttls.enable=true